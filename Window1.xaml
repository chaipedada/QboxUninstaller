<Window x:Class="UninstallerTest.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UninstallerTest"
        mc:Ignorable="d"
        Title="Qbox Uninstall Confirmation" Height="157.468" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="149*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Are you sure?&#xA;Qbox Client program will be uninstalled." HorizontalAlignment="Left" Margin="27,39,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Button x:Name="yes1" Content="Yes" HorizontalAlignment="Left" Margin="244,84,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="yes_Click" Background="ForestGreen" Foreground="White"/>
        <Button x:Name="no1" Content="No" HorizontalAlignment="Left" Margin="155,84,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="no_Click"/>
        <Image HorizontalAlignment="Left" Height="37" VerticalAlignment="Top" Width="102" Margin="10,10,0,0" Source="qboxlogo.JPG" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
