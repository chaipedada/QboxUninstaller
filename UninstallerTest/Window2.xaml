<Window x:Class="UninstallerTest.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UninstallerTest"
        mc:Ignorable="d"
        Title="Qbox and System Data Uninstallation Confirmation" Height="176.468" Width="450">
    <Grid>
        <Label Content="Are you sure?&#xA;Qbox Client Program will be uninstalled and all the system data files will be &#xD;&#xA;deleted. Use this option if you want to stop using Qbox or want to do a&#xD;&#xA;fresh install." HorizontalAlignment="Left" Margin="10,35,0,21" Width="410"/>
        <Button x:Name="yes" Content="Yes" HorizontalAlignment="Left" Margin="345,108,0,0" VerticalAlignment="Top" Width="75" Click="yes_Click" Background="ForestGreen" Foreground="White"/>
        <Button x:Name="no" Content="No" HorizontalAlignment="Left" Margin="256,108,0,0" VerticalAlignment="Top" Width="75" Click="no_Click"/>
        <Image HorizontalAlignment="Left" Height="37" VerticalAlignment="Top" Width="102" Margin="10,0,0,0" Source="qboxlogo.JPG"/>

    </Grid>
</Window>
